{
  "name": "simple-split",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run open-browser & next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "eslint": "eslint --max-warnings 0 --no-warn-ignored --format stylish --color && echo ESLint: OK || (echo ESLint: FAIL && exit 1)",
    "eslint:fix": "eslint --fix && echo ESLint: OK || (echo ESLint: FAIL && exit 1)",
    "prettier": "prettier --check --log-level warn \"src/**/*.{ts,tsx,js,jsx,json,md}\" && echo Prettier: OK || (echo Prettier: FAIL && exit 1)",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" && echo Prettier: OK || (echo Prettier: FAIL && exit 1)",
    "typecheck": "tsc --noEmit && echo Typecheck: OK || (echo Typecheck: FAIL && exit 1)",
    "lint": "concurrently -n ESLint,Prettier,Typecheck -c yellow,magenta,cyan \"npm:eslint\" \"npm:prettier\" \"npm:typecheck\"",
    "lint:fix": "concurrently -n ESLint,Prettier,Typecheck -c yellow,magenta,cyan \"npm:eslint:fix\" \"npm:prettier:fix\" \"npm:typecheck\"",
    "open-browser": "start http://localhost:3000"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.14",
    "@clerk/nextjs": "^6.31.4",
    "@dword-design/eslint-plugin-import-alias": "^6.0.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
